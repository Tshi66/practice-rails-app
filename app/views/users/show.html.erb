<div class="container userPage" id="wrapper">
  <div class="row">
    <aside class="col-md-3">
      <div class="profile-avatar border">
        <% if @user.avater? %>
          <%= image_tag @user.avater.thumb.url %>
        <% else %>
          <%= image_tag("/images/default.jpg") %>
        <% end %>
      </div>

      <%= render "relationships/follow_button", user: @user %>
      <% unless @user.introduce.nil? %>
        <div class="profile-introduce">
          <%= @user.introduce %></td>
        </div>
      <% end %>
      <% if @user == current_user %>
        <%= link_to "ユーザ編集", edit_user_path(current_user), class: "btn btn-primary" %>
        <div class="panel">
          <div class="panel-heading">
            <h3 class="panel-title"><%= @user.name %></h3>
            <% if @user.avater? %>
              <%= image_tag @user.avater.thumb.url %>
            <% else %>
              <%= image_tag("/images/default.jpg") %>
            <% end %>
          </div>
        </div>
        <%= render "relationships/follow_button", user: @user %>
    
        <% unless @user.introduce.nil? %>
          <div class="profile-introduce">
            <td><%= @user.introduce %></td>
          </div>
        <% end %>
      <% end %>
      
      <% if current_user.admin? && !(current_user == @user) %>
        <%= link_to "管理者用削除", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
      <div class="profile-username">
        <h3> I am <%= @user.name %> </h3>
      </div>
      <%= render "relationships/follow_button", user: @user %>
      <div class="profile-info">
        <h8>自己紹介文</h8>
        <% unless @user.introduce.nil? %>
          <div class="profile-introduce border">
            <p><%= @user.introduce %></p>
          </div>
        <% end %>
        <% if @user == current_user %>
          <%= link_to "ユーザ編集", edit_user_path(current_user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </aside>
    <div class="col-md-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item active">
            <a href="#posted" class="nav-link posted-tab" id="posted-tab" data-toggle="tab" role="tab" aria-controls="posted" aria-selected="true">投稿した記事</a>
        </li>
        <li class="nav-item">
            <a href="#follow" id="follow-tab" data-toggle="tab" class="nav-link posted-tab" role="tab" aria-controls="follow" aria-selected="true">フォロー</a>
        </li>
        <li class="nav-item">
            <a href="#follower" id="follower-tab" data-toggle="tab" class="nav-link posted-tab" role="tab" aria-controls="follower" aria-selected="false">フォロワー</a>
        </li>
      </ul>
      <div class="tab-content mt-3" id="myTabContent">
        <div class="tab-pane fade show active" id="posted" role="tabpanel" aria-labelledby="posted-tab">
          <%= render 'posts/post' %>
        </div>
        <div class="tab-pane fade show" id="follow" role="tabpanel" aria-labelledby="follow-tab">
          <%= link_to followings_user_path(@user) do %>フォロー <% end %>
        </div>
        <div class="tab-pane fade show" id="follower" role="tabpanel" aria-labelledby="follower-tab">
          <%= link_to followers_user_path(@user) do %>フォロワー <% end %>
        </div>
      </div>
    </div>
  </div>
</div>