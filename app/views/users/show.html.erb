<div class="container userPage" id="wrapper">
  <div class="row">
    <aside class="col-md-3">
      <div class="profile-avatar border">
        <% if @user.avater? %>
          <%= image_tag @user.avater.thumb.url %>
        <% else %>
          <%= image_tag("/images/default.jpg") %>
        <% end %>
      </div>
      
      <div class="profile-username">
        <h3> I am <%= @user.name %> </h3>
      </div>
      <% if current_user.admin? && !(current_user == @user) %>
        <%= link_to "管理者用削除", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
      <%= render "relationships/follow_button", user: @user %>
      <div class="profileUser_following">
        <p>フォロー中のユーザー </p>
        <div class="profileUser_following-body border">
          <ul>
            <% @user.followings.each do |user| %>
              <li>
                <%= link_to user do %> 
                  <% user.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="profileUser_following">
        <p>フォロワーリスト </p>
        <div class="profileUser_following-body border">
          <ul>
            <% @user.followers.each do |user| %>
              <li>
                <%= link_to user do %> 
                  <%= link_to user do %> 
                    <% user.name %>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="profile-info">
        <h8>自己紹介文</h8>
          <div class="profile-introduce border">
            <% if @user.introduce? %>
              <p><%= @user.introduce %></p>
            <% else %>
              <p>未設定</p>
            <% end %>
          </div>
        <% if @user == current_user %>
          <%= link_to "ユーザ編集", edit_user_path(current_user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </aside>
    
    <div class="col-md-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item active">
            <a href="#posted" class="nav-link posted-tab" id="posted-tab" data-toggle="tab" role="tab" aria-controls="posted" aria-selected="true">投稿した記事</a>
        </li>
        <li class="nav-item">
            <a href="#follow" class="nav-link follow-tab" id="follow-tab" data-toggle="tab" role="tab" aria-controls="follow" aria-selected="true">フォロー</a>
        </li>
      </ul>
      <div class="tab-content mt-3" id="myTabContent">
        <div class="tab-pane fade show active" id="posted" role="tabpanel" aria-labelledby="posted-tab">
          <%= render 'posts/post' %>
        </div>
        <div class="tab-pane fade show" id="follow" role="tabpanel" aria-labelledby="follow-tab">
          <%= render 'user', users: @followings %>
        </div>
      </div>
    </div>
  </div>
</div>