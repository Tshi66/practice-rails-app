<div class="row">
  <div class="col-md-6 col-md-offset-3">


  <%= form_tag posts_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %> 
  <h1>投稿一覧</h1>

  <% if @posts.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>タイトル</th>
          <th>画像</th>
        </tr>
      </thead>
      <tbody>
        
        <% @posts.each do |post| %>
          <tr>
            <td><%=link_to(post.user.name, user_path(post.user_id))%>
                <% if post.user.avater? %>
                  <%= image_tag post.user.avater.thumb50.url %>
                <% else %>
                  <%= image_tag("/images/default.jpg") %>
                <% end %></td>
            <td><%= link_to(post.content, post_path(post))%></td>
          <% if post.picture? %>
            <% post.picture.each do |picture| %>
              <td><%= image_tag picture.thumb.url %></td>
            <% end %>
          <% end %>
        <% end %>
          </tr>
      
    </tbody>
  </table>
  
  <% end %>

  <%= link_to '新規メッセージの投稿', new_post_path, class: "btn btn-primary" %>
  </div>
</div>

  
