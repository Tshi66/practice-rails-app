<div class="like">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome.min.css">
  <% if post.like?(current_user) %>
    <%= form_for(post.likes.find_by(user_id: current_user.id),method: :delete) do |f| %>
      <%= f.submit "いいね済み", class: "btn btn-outline-info"%>
      <span class="text-info"><%= @likes_count %></span>
    <% end %>
  <% else %>
    <%= form_for(post.likes.build) do |f| %>
      <div><%= hidden_field_tag :post_id, post.id %></div>
        <%= f.submit "いいね", class: "btn btn-outline-info" %>
        <span class="text-info"><%= @likes_count %></span>
    <% end %>
  <% end %>
</div>

